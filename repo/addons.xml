      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en_GB">Custom IPTV player with multi-M3U & EPG support</summary>
      <description lang="en_GB">
        Load multiple .m3u playlists, merge channels, and integrate EPG data.
        Free — depends on user-provided sources.
      </description>
      <platform>all</platform>
      <license>GPL-3.0</license>
      <source>https://github.com/coolitis/cooler-repo</source>
      <news>v1.0.0 - Initial release</news>
      <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
      </assets>
    </extension>
    <info compressed="false">https://coolitis.github.io/cooler-repo/addons/plugin.video.iptv/addon.xml</info>
    <datadir zip="true">https://coolitis.github.io/cooler-repo/addons/plugin.video.iptv/</datadir>
  </addon>

